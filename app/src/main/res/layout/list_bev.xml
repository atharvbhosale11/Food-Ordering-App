<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_margin="10dp"
        app:cardElevation="15dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="12dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgicon"
                android:src="@drawable/tea"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/txtname"
                android:layout_marginLeft="20dp"
                android:text="Tea"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:layout_toRightOf="@+id/imgicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtrs"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtname"
                android:layout_toRightOf="@+id/imgicon"
                android:text="Rs"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtprice"
                android:layout_toRightOf="@+id/txtrs"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/txtname"
                android:text="10"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_toRightOf="@+id/txtprice"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="50dp"
                android:id="@+id/dec"
                android:src="@drawable/ic_do_not_disturb_on_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="0"
                android:id="@+id/quan"
                android:textSize="27sp"
                android:layout_toRightOf="@+id/dec"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/inc"
                android:layout_toRightOf="@+id/quan"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle_black_24dp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>